<section id="consent_form">
    <div class="container">
        <div class="consent-title title">
            <h1><!-- something something something --></h1>
        </div>
        
        <form role="form" action="/consent" method="post">
            <div class="consent-message">
                {{client.name}} is requesting permission to:
            </div>
            
            <ul class="permissions-list">
                {{#each permissions}}
                    {{> permissions/show.html }}
                {{/each}}
            </ul>
        
            <input type="hidden" class="csrf_token" value="{{csrf_token}}" name="csrf_token">
        
            <input type="hidden" class="return" value="{{return}}" name="return">
            
            <button type="submit" class="btn btn-default">Allow access</button>
            
            <!-- TODO make cancel button go back to referer -->
            <button type="cancel" class="btn pull-right">No thanks</button>
        </form>
    </div>
</section>
